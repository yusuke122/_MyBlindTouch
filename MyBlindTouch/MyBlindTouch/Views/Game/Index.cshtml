@{
        ViewData["Title"] = "MyBlindTouch-game_index";
        //https://shuhelohelo.hatenablog.com/entry/2019/10/29/131039
}
@model MyBlindTouch.Models.GameModel
@using Microsoft.AspNetCore.Http

<div class="banner">
    <form method="post" asp-controller="Game" asp-action="Game">
        <h2>出題範囲</h2>
        @{
            for(var i=0;i<3;i++)
            {
                <input asp-for="@Model.LevelList[i]"/>
                <label asp-for="@Model.LevelList[i]">@Model.LevelListName[i]</label>
            }
        }
        <input type="submit"value="ゲーム開始"class="btn btn-defaultLayout">
        <a asp-controller="Home" asp-action="Index"class="btn btn-defaultLayout">戻る</a>
    </form>
</div>