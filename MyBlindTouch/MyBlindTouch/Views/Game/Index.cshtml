@{
    ViewData["Title"] = "MyBlindTouch-game_index";
    //https://shuhelohelo.hatenablog.com/entry/2019/10/29/131039
}
@model MyBlindTouch.Models.GameModel
@using Microsoft.AspNetCore.Http

<div class="banner">
    <form method="post" asp-controller="Game" asp-action="Game">
        <h2>出題範囲</h2></br>
            @Html.CheckBoxFor(expression: model => model.ElementLevel, new{tabindex=1})
            <input type="hidden"name="ElementLevel"value="false"/>
            <label for="ElementLevel">初級</label>
            @Html.CheckBoxFor(expression: model => model.MiddleLevel, new{tabindex=2})
            <input type="hidden"name="MiddleLevel"value="false"/>
            <label for="ElementLevel">中級</label>
            @Html.CheckBoxFor(expression: model => model.TopLevel, new{tabindex=3})
            <input type="hidden"name="TopLevel"value="false"/>
            <label for="TopLevel">上級</label>
        </br>
        <input type="submit"value="ゲーム開始"class="btn btn-defaultLayout">
        <a asp-controller="Home" asp-action="Index"class="btn btn-defaultLayout">戻る</a>
    </form>
</div>